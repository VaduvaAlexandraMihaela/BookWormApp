
@model AddBookViewModel
@{
    ViewData["Title"] = "AddBook";
}


    <form class="p-5 bg-light">
        <div class="section-title">
            <h2 class="mb-5">Add New Book</h2>
        </div>
        
            <div class="form-group">
                <label for="message">Book Name</label>
                <input type="text" class="form-control form-control-lg" asp-for="bookName" />
            </div>
            <div class="form-group">
                <input type="submit" value="Add Book" class="btn btn-primary py-3">
            </div>

        
    </form>
