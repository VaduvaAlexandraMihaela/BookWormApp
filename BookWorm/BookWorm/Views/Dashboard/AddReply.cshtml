@model AddReplyViewModel
@{
    ViewData["Title"] = "AddReply";
}

<div class="section-title">
    <h2 class="mb-5">Reply</h2>
</div>
<form action="#" class="p-5 bg-light">
    <div class="form-group">
        <label for="message">Comment</label>
        <textarea id="message" cols="30" rows="10" class="form-control" asp-for="text"></textarea>
    </div>
    <div class="form-group">
        <input type="submit" value="Post Reply" class="btn btn-primary py-3">
    </div>

</form>